<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="splashExtension" name="Splash Extensions" schema="schema/splashExtension.exsd"/>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="starterkitrcp.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Perspective"
            class="starterkitrcp.Perspective"
            id="starterkit-rcp.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            name="View"
            class="starterkitrcp.View"
            id="starterkit-rcp.view">
      </view>
      <view
            class="viewpart.BookView"
            id="starterkit-rcp.bookview"
            name="Book View"
            restorable="true">
      </view>
      <view
            class="viewpart.DetailsView"
            id="starterkit-rcp.detailsview"
            name="Details View"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="starterkit-rcp.perspective">
         <view
               id="starterkit-rcp.bookview"
               minimized="false"
               relationship="left"
               relative="org.eclipse.ui.editorss">
         </view>
         <view
               id="starterkit-rcp.detailsview"
               minimized="false"
               relationship="right"
               relative="org.eclipse.ui.editorss">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File">
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit">
            </command>
         </menu>
         <menu
               label="View">
            <command
                  commandId="starterkit-rcp.add"
                  style="push">
            </command>
            <command
                  commandId="starterkit-rcp.delete"
                  style="push">
            </command>
            <command
                  commandId="starterkit-rcp.edit"
                  style="push">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:starterkit-rcp.bookview">
         <command
               commandId="starterkit-rcp.add"
               style="push">
         </command>
         <command
               commandId="starterkit-rcp.delete"
               style="push">
         </command>
         <command
               commandId="starterkit-rcp.edit"
               style="push">
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:starterkit-rcp.bookview">
         <command
               commandId="starterkit-rcp.add"
               label="Add"
               style="push">
         </command>
         <command
               commandId="starterkit-rcp.delete"
               label="Delete"
               style="push">
         </command>
         <command
               commandId="starterkit-rcp.edit"
               label="Edit"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="handler.AddHandler"
            commandId="starterkit-rcp.add">
      </handler>
      <handler
            class="handler.DeleteHandler"
            commandId="starterkit-rcp.delete">
      </handler>
      <handler
            class="handler.EditHandler"
            commandId="starterkit-rcp.edit">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="starterkit-rcp.add"
            name="Add">
      </command>
      <command
            id="starterkit-rcp.delete"
            name="Delete">
      </command>
      <command
            id="starterkit-rcp.edit"
            name="Edit">
      </command>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="starterkit-rcp.application"
            name="starterkit Application">
         <property
               name="appName"
               value="starterkit Application">
         </property>
         <property
               name="windowImages"
               value="icons/alt_window_16.gif,icons/alt_window_32.gif">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.splashHandlers">
      <splashHandler
            class="starterkitrcp.splashHandlers.ExtensibleSplashHandler"
            id="starterkitrcp.splashHandlers.extensible">
      </splashHandler>
      <splashHandlerProductBinding
            productId="starterkit-rcp.product"
            splashId="starterkitrcp.splashHandlers.extensible">
      </splashHandlerProductBinding>
   </extension>
   <extension
         point="starterkit-rcp.splashExtension">
      <splashExtension
            icon="icons/af.png"
            id="af"
            tooltip="Application Framework">
      </splashExtension>
      <splashExtension
            icon="icons/embedded.png"
            id="embedded"
            tooltip="Embedded">
      </splashExtension>
      <splashExtension
            icon="icons/enterprise.png"
            id="enterprise"
            tooltip="Enterprise">
      </splashExtension>
      <splashExtension
            icon="icons/languages.png"
            id="languages"
            tooltip="Languages">
      </splashExtension>
      <splashExtension
            icon="icons/rcp.png"
            id="rcp"
            tooltip="RCP">
      </splashExtension>
   </extension>

</plugin>
